<%= form_for(@message) do |f| %>
  <%#= f.hidden_field :user_id, value: current_user.id  %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  
<div class="form-group">
  <label for="InputTipe" class="col-sm-2 control-label text-right">メニュー</label>
    <div class="col-sm-10">
      <%= f.text_field :tipe, id: "InputTipe", class: "form-control form_naco", placeholder: "type" %>
    </div>
  </div>

  <div class="form-group">
  <label for="InputMedia" class="col-sm-2 control-label text-right">※媒体種別</label>
    <div class="col-sm-10">
      <%= f.select :media,{'Yahoo' => 'Yahoo' ,'google' => 'google' ,'楽天' => 'rakuten' ,'Amazon' => 'Amazon' },id: "InputMedia", class: "form-control form_naco" %>
    </div>

  <div class="form-group">
  <label for="InputStart" class="col-sm-2 control-label text-right">出稿開始日</label>
    <div class="col-sm-10">
      <%= f.text_field :start, id: "InputStart", class: "form-control form_naco", placeholder: "2016-06-01" %>
    </div>
  </div>

  <div class="form-group">
  <label for="InputFinish" class="col-sm-2 control-label text-right">出稿終了日</label>
    <div class="col-sm-10">
      <%= f.text_field :finish, id: "InputFinish", class: "form-control form_naco", placeholder: "2016-06-01" %>
    </div>
  </div>

  <div class="form-group">
  <label for="InputRink" class="col-sm-2 control-label text-right">※リンク先URL</label>
    <div class="col-sm-10">
      <%= f.text_field :rink, id: "InputRink", class: "form-control form_naco", placeholder: "url" %>
    </div>
  </div>

  <div class="form-group sub_btn">
    <div class="col-sm-offset-6 col-sm-6">
      <%= f.submit "作成" , class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

