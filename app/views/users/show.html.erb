<h1>
  <%= gravatar_for current_user %>
  <%= current_user.name %>
</h1>

<div class="panel panel-info">
  <div class="panel-heading">
    リクエスト一覧
  </div>
  
  <div class="panel-heading">
    <div class="col-sm-1">広告種別</div>
    <div class="col-sm-1">媒体種別</div>
    <div class="col-sm-1">開始日</div>
    <div class="col-sm-1">終了日</div>
    <div class="col-sm-7">リンク先URL</div>

    <br>
  </div>
    
  <div class="panel-body">
			<% @messages.each do |message| %>
			  <div class="col-sm-1"><%= message.tipe %></div>
			  <div class="col-sm-1">
			    <% if message.media == '1' %>
			     <%= "yahoo" %>
			    <% elsif message.media =='2'%>
			     <%= "google"%>
			    <% elsif message.media =='3'%>
			     <%= "楽天"%>
			    <% elsif message.media =='4'%>
			     <%= "Amazon"%>
			    <% end %>
			   </div>
			  <div class="col-sm-1"><%= message.start %></div>
			  <div class="col-sm-1"><%= message.finish %></div>
			  <div class="col-sm-7"><%= message.rink %></div>
			  <div class="col-sm-1">
          <%= link_to "編集" , edit_message_path(message), :class => "btn btn-success" %>
          <%= link_to "削除" , message , method: :delete, data: { confirm: '削除してもよろしいですか？' }, :class => "btn btn-danger" %>    
        </div>
      <% end %>
  </div>
  
</div>

<%= link_to "新規リクエストの作成" , new_message_path(@user), :class => "btn btn-primary" %>
<%= debug @message %>